{
  "manifest_version": 3,
  "name": "SSH to HTTPS Converter",
  "version": "1.0.0",
  "description": "Automatically converts SSH Git URLs to HTTPS when pasting in browser",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "omnibox": {
    "keyword": "ssh"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SSH to HTTPS Converter - Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
